<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
	<customer_account>
		<reference name="customer_account_navigation">
			<action method="addLink" translate="label" module="accolade_bttn">
				<name>accoladebttn_customer</name>
				<path>accoladebttn/customer/</path>
				<label>My Bt.tn</label>
			</action>
		</reference>
	</customer_account>
	<accolade_bttn_customer_index>
		<update handle="customer_account" />
		<reference name="content">
			<block type="core/template" name="accolade_bttn_content" template="accolade/bttn/dashboard.phtml"> 
				<block type="core/template" name="form.action" as="form.action" template="accolade/bttn/formaction.phtml"/>
				<block type="core/template" name="edit.bttn.details" as="edit.bttn.settings" template="accolade/bttn/edit/bttn/settings.phtml"/>
				<block type="core/template" name="edit.shipping" as="edit.shipping" template="accolade/bttn/edit/shipping.phtml"/>
				<block type="core/template" name="edit.payment" as="edit.payment" template="accolade/bttn/edit/payment.phtml"/>
				<block type="core/template" name="edit.ordertemplate" as="edit.ordertemplate" template="accolade/bttn/edit/ordertemplate.phtml"/>
				<block type="core/template" name="totals" as="totals" template="accolade/bttn/totals.phtml"/>
			</block>
		</reference>
	</accolade_bttn_customer_index>
</layout>