<?xml version="1.0"?>
<config>
    <modules>
        <Accolade_Bttn>
            <version>0.1.0</version>
        </Accolade_Bttn>
    </modules>
    <global>
        <models>
            <accolade_bttn>
                <class>Accolade_Bttn_Model</class>
                <resourceModel>accolade_bttn_resource</resourceModel>
            </accolade_bttn>
            <accolade_bttn_resource>
                <class>Accolade_Bttn_Model_Resource</class>
                <entities>
                    <bttn>
                        <table>accolade_bttn_associations</table>
                    </bttn>
                    <key>
                        <table>accolade_bttn_keys</table>
                    </key>
                </entities>
            </accolade_bttn_resource>
        </models>
        <helpers>
            <accolade_bttn>
                <class>Accolade_Bttn_Helper</class>
            </accolade_bttn>
        </helpers>
        <blocks>
            <accolade_bttn>
                <class>Accolade_Bttn_Block</class>
            </accolade_bttn>
        </blocks>
        <events>
            <admin_system_config_changed_section_accolade>
                <observers>
                    <accolade_bttn>
                        <class>accolade_bttn/observer</class>
                        <method>checkAllApiKeys</method>
                    </accolade_bttn>
                </observers>
            </admin_system_config_changed_section_accolade>
        </events>
        <resources>
            <accoladebttn_setup>
                <setup>
                    <module>Accolade_Bttn</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </accoladebttn_setup>
            <accoladebttn_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </accoladebttn_write>
            <accoladebttn_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </accoladebttn_read>
        </resources>
    </global>
    <frontend>
        <routers>
            <accolade_bttn>
                <use>standard</use>
                <args>
                    <module>Accolade_Bttn</module>
                    <frontName>accolade_bttn</frontName>
                </args>
            </accolade_bttn>
        </routers>
        <layout>
            <updates>
                <accolade_bttn module="Accolade_Bttn">
                    <file>accolade_bttn.xml</file> <!-- Our layout file name-->
                </accolade_bttn>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <accolade>
                                            <title>Accolade - All</title>
                                        </accolade>
                                    </children>
                                </config>
                            </children>
                        </system>
                        <accolade_bttn>
                            <children>
                                <bttn>
                                    <title>Accolade - All</title>
                                </bttn>
                            </children>
                        </accolade_bttn>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <accoladebttn after="Mage_Adminhtml">Accolade_Bttn_Adminhtml</accoladebttn>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <crontab>
        <jobs>
            <check_bttn_api_keys>
                <schedule>
                    <cron_expr>0 0 1 * *</cron_expr>
                </schedule>
                <run>
                    <model>accolade_bttn/key::checkAllKeys</model>
                </run>
            </check_bttn_api_keys>
        </jobs>
    </crontab>
</config>
